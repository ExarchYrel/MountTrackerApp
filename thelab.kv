AnchorLayoutExample:

<AnchorLayoutExample>:
    anchor_x: "right"
    anchor_y: "bottom"
    Button:
        text: "Jeff1"
        size_hint: .1, .1

<BoxLayoutExample>:
    orientation: "horizontal"
    Button:
        text: "Jeff"
        size: "100dp", "500dp"
        size_hint: None, None

    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "Jeff1"
        Button:
            text: "Jeff2"
        Button:
            text: "Jeff3"
        Button:
            text: "Jeff4"
    Button:
        text: "Jeff3"


<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0.2, 0, 1, 1
    Label:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0.2, 1